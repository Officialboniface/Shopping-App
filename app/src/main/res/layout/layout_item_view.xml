<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#C9EFBC"
    android:padding="4dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/Card_viewId"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:elevation="1dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="1dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"

            android:padding="15dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Product_Image"
                android:layout_width="150dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@android:color/holo_green_dark"
                android:layout_height="150dp"
                android:src="@drawable/chinese_shrimp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chinese_shrimp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                app:layout_constraintBottom_toBottomOf="@id/Product_Image"
                app:layout_constraintHorizontal_bias="0.51"
                app:layout_constraintLeft_toRightOf="@id/Product_Image"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/Product_Image"
                app:layout_constraintVertical_bias="0.39" />

            <TextView
                android:id="@+id/Product_Price"
                android:layout_width="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/_40"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#F4511E"
                app:layout_constraintRight_toRightOf="@id/Product_name"
                app:layout_constraintLeft_toLeftOf="@id/Product_name"
                app:layout_constraintTop_toBottomOf="@id/Product_name"
                android:layout_height="wrap_content"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
